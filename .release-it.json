{
  "plugins": {
    "news-fragments": {
      "changelogFile": "CHANGELOG.md",
      "changelogDateFormat": "YYYY-MM-DD",
      "fragmentsFolder": "fragments",
      "fragmentsTypes": [
        {
          "title": "Features",
          "extension": "feature"
        },
        {
          "title": "Bugfixes",
          "extension": "bugfix"
        },
        {
          "title": "Documentation",
          "extension": "doc"
        },
        {
          "title": "Deprecations and Removals",
          "extension": "removal"
        },
        {
          "title": "Misc",
          "extension": "misc"
        }
      ]
    }
  },
  "git": {
    "commitMessage": "Release ${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": true
  }
}
